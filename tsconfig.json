{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "resources/ts/",
        "paths": {
            "@/*": ["./*"],
            "~/*": ["../css"],
            "#/*": ["../images"]
        },
    },
    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": [
        "node_modules"
    ]
}
